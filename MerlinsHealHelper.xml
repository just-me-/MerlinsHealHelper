        <Label name="$(parent)T" font="ZoFontAnnounceLarge" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="CENTER" text="Heal Helper" />

      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
